#!/usr/bin/make -f

export DEB_BUILD_HARDENING=1

# Install systemd unit files
override_dh_systemd_enable:
	dh_systemd_enable --name=rtpproxy

override_dh_systemd_start:
	dh_systemd_start --no-restart-after-upgrade --no-start --name=rtpproxy

override_dh_install:
	${MAKE} -C iptables-extension
	${MAKE} -C daemon
	dh_install

%:
	dh $@ --with systemd
