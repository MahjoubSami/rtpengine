[Unit]
Description=RTPEngine Recording daemon
After=network.target

[Service]
Type=simple
EnvironmentFile=/etc/default/rtpengine-recording
PIDFile=/var/run/rtpengine-recording.pid
ExecStart=/usr/sbin/rtpengine-recording -f -E --pidfile /var/run/rtpengine-recording.pid --spool-dir=${SPOOL_DIR} --output-dir=${OUTPUT_DIR} ${EXTRA_OPTS}
Restart=always

[Install]
WantedBy=multi-user.target
